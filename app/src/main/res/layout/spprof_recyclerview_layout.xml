<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:id="@+id/cardview"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_profilepic"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/logo1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_spname"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/fredokasemibold"
                android:text="@string/nameshow"
                android:textColor="@color/eerieblack"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/img_profilepic"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_sp_category"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/fredokaregular"
                android:text="@string/service_provider"
                android:textColor="@color/eerieblack"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_sp_number"
                app:layout_constraintStart_toEndOf="@+id/img_profilepic"
                app:layout_constraintTop_toBottomOf="@+id/tv_spname" />

            <TextView
                android:id="@+id/tv_sp_number"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/fredokaregular"
                android:text="@string/phone_number"
                android:textColor="@color/eerieblack"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_profilepic" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>